html
    head
        title= title
    style
        include Memy.css
    body
        h1= message
        img(src="https://i.imgflip.com/421vgp.jpg" id="top")
        h1="Meme list"
        ul
            each meme in memes
                li
                   a(href="meme/" + meme.id) #{meme.name}
                   p Price: #{meme.price}
                   img(src=meme.url)
        form(action = "/" method = "POST")
            label Login: 
            input(type="text" name="login" class="write")
            label Password: 
            input(type="text" name="password" class="write")
            input(type="submit" value="Send" class="click")