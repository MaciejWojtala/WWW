html
    head
        title= title
    style
        include Memy.css
    body
        h1= message

        form(action = "/meme/" + meme.id + "/submit-form" method = "POST")
            label New price: 
            input(type="number" name="price" class="write")
            input(type="reset" value="Clear" class="click")
            input(type="submit" value="Send" class="click")
            input(type="hidden" name="_csrf" value=req.csrfToken())

        table
            thead
                tr
                    th Numer generacji
                    each price, index in meme.history
                        th #{index + 1}
            tbody
                tr
                    td Cena
                    each pair in meme.history
                        td #{pair[0]}
